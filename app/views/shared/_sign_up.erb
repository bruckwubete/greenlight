<span class="signup">
  <% if current_user %>
    <div class="text-center">
      <% if @main_room %>
        <span><%= t('logged_in_description_html', link: link_to(current_user.name, meeting_room_url(resource: 'rooms', id: current_user.encrypted_id))) %></span>
      <% else %>
        <%= link_to(t('return_to_room'), meeting_room_url(resource: 'rooms', id: current_user.encrypted_id)) %>
      <% end %>
      <div><%= link_to t('logout'), user_logout_url %></div>
    </div>
  <% else %>
    <div class="page-wrapper login">
      <div class="container-fluid">
        <div class="center-panel-wrapper">
          <form class="row">
            <div>
              <div class="top-buffer text-center">
                <h1>Sign Up</h1>
              </div>
              <div class="row">
                <input type="title" class="col form-control" id="user-first-name" placeholder="First Name">
                <input type="title" class="col form-control" id="user-last-name" placeholder="Last Name">
                <input type="title" class="col form-control" id="user-email" placeholder="Email">
              </div>
            </div>
            <div class="top-buffer text-center">
              <button type="button" class="btn btn-success sign-up-user-button centered" data-dismiss="popover">
                <%= t('signup') %>
              </button>
            </div>
          </form>
          <div class="text-center">
            <span><%= t('login_description') %></span>
            <div><%= link_to t('login'), user_login_url %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</span>
